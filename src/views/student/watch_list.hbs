<main id="main" style="margin-top: 80px;">
    <!-- ======= Popular Courses Section ======= -->
    <section id="popular-courses" class="courses pt-4">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <p>Watch list</p>
            </div>
            {{#each row}}
                <div class="row" data-aos="zoom-in" data-aos-delay="100">
                    {{#each this}}
                        <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                            {{> course_item this isWatchList=true}}
                        </div>
                    {{/each}}
                </div>
            {{/each}}
            </div>
        </div>
    </section>
    {{#if pages}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item  {{#if_eq currentPage 1}} disabled {{/if_eq}}">
                    <a class="page-link" href="/my-courses/watch-list/pages/{{subNum currentPage 1}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#forLoop 1 pages 1}}
                    {{#if_eq this ../currentPage}}
                        <li class="page-item active "><a class="page-link" href="/my-courses/watch-list/pages/{{this}}">{{this}}</a></li>
                    {{else}}
                        <li class="page-item"><a class="page-link" href="/my-courses/watch-list/pages/{{this}}">{{this}}</a></li>
                    {{/if_eq}}
                {{/forLoop}}
                <li class="page-item {{#if_eq currentPage maxPage}} disabled {{/if_eq}}">
                    <a class="page-link" href="/my-courses/watch-list/pages/{{addNum currentPage 1}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    {{/if}}

    <!-- End Popular Courses Section -->
</main>

