<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
        <a href="#" class="logo d-flex align-items-center">
            <img src="assets/img/logo.png" alt="" />
            <span
                class="d-none d-lg-block text-dark d-flex justify-content-center"
            >AcademyX</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
    </div>
    <!-- End Logo -->

    <nav class="header-nav ms-auto">
        {{#if auth}}
            <ul class="d-flex align-items-center">
                <!-- End Search Icon-->

                <!-- End Messages Nav -->

                <li class="nav-item dropdown pe-3">
                    <a
                        class="nav-link nav-profile d-flex align-items-center pe-0"
                        href="#"
                        data-bs-toggle="dropdown"
                    >
                        <img
                            src="/public/images/trainers/trainer-1.jpg"
                            alt="Profile"
                            class="rounded-circle"
                        />
                        <span
                            class="d-none d-md-block dropdown-toggle ps-2"
                        >{{authUser.fullname}}</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul
                        class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile"
                    >

                        <li class="dropdown-header">

                            <h6>{{authUser.fullname}}</h6>
                            <span>Admin</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>

                        <li>
                            <form
                                id="frmLogOut"
                                action="/teacher-logout"
                                method="POST"
                            ></form>
                            <a
                                class="dropdown-item d-flex align-items-center"
                                href="javascript: $('#frmLogOut').submit();"
                            >
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Sign Out</span>
                            </a>
                        </li>

                    </ul>
                    <!-- End Profile Dropdown Items -->
                </li>
                <!-- End Profile Nav -->
            </ul>
        {{/if}}
    </nav>
    <!-- End Icons Navigation -->
</header>